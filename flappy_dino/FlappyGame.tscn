script/source = "extends Node2D

# ðŸŽ® FLAPPY DINO - MAIN GAME SCRIPT
# This controls the entire Flappy Dino game

# âš™ï¸ GAME SETTINGS - EASY TO CUSTOMIZE!
# Change spawn_interval to control how often pipes appear (in seconds)
var PIPE_SPAWN_INTERVAL = 2.0

# Change these to adjust scrolling background layers
const FAR_BG_SPEED = 20.0  # Slowest layer (mountains/sky)
const MID_BG_SPEED = 40.0  # Middle layer (trees/hills)

@onready var bird: CharacterBody2D = $Bird
@onready var spawn_timer: Timer = $SpawnTimer
@onready var score_label: Label = $UI/ScoreLabel
@onready var lives_label: Label = $UI/LivesLabel
@onready var game_over_panel: Panel = $UI/GameOverPanel
@onready var far_bg: ColorRect = $FarBackground
@onready var pause_menu = $PauseMenu

var pipe_scene = preload(\"res://flappy_dino/PipePair.tscn\")
var tutorial_scene = preload(\"res://flappy_dino/FlappyTutorial.tscn\")
var remove_ads_dialog_scene = preload(\"res://shared/RemoveAdsDialog.tscn\")

var score: int = 0
var lives: int = 3
var game_started: bool = false

# Parallax scrolling positions
var far_bg_offset: float = 0.0
var mid_bg_offset: float = 0.0

func _ready() -> void:
    AdManager.show_banner_ad()
    
    # Apply difficulty settings
    PIPE_SPAWN_INTERVAL = 2.0 / SettingsManager.get_obstacle_spawn_multiplier()
    spawn_timer.wait_time = PIPE_SPAWN_INTERVAL
    
    # Update lives display for unlimited mode
    update_lives_display()
    
    # Auto-pause and show tutorial on startup
    get_tree().paused = true
    if TutorialManager.should_show_tutorial(\"flappy\"):
        show_tutorial()
    else:
        show_auto_tutorial()

func start_game() -> void:
    # Start normal game loop
    game_started = true
    get_tree().paused = false
    spawn_timer.start()

func show_tutorial() -> void:
    var tutorial = tutorial_scene.instantiate()
    add_child(tutorial)
    TutorialManager.show_tutorial(\"flappy\")

func show_auto_tutorial() -> void:
    # Show simple \"TAP TO START\" tutorial
    $AutoTutorialPanel.visible = true
    $AutoTutorialPanel.start_pressed.connect(_on_start_game_pressed)

func _on_start_game_pressed() -> void:
    $AutoTutorialPanel.visible = false
    start_game()

func _process(delta: float) -> void:
    # Check if bird falls off screen (death without collision)
    if bird.position.y > 600:
        take_damage()
    
    # ðŸŽ¨ PARALLAX SCROLLING - Creates depth effect
    # The far background scrolls slowest, mid background faster
    far_bg_offset -= FAR_BG_SPEED * delta
    mid_bg_offset -= MID_BG_SPEED * delta
    
    # Reset positions to create infinite scroll
    if far_bg_offset <= -800:
        far_bg_offset = 0
    if mid_bg_offset <= -800:
        mid_bg_offset = 0
    
    # Apply offsets
    far_bg.position.x = far_bg_offset


func _on_spawn_timer_timeout() -> void:
    # Create new pipe obstacle
    var pipe = pipe_scene.instantiate()
    pipe.position = Vector2(850, 0)
    pipe.passed.connect(_on_pipe_passed)
    add_child(pipe)

func _on_pipe_passed() -> void:
    # Increment score when bird successfully passes a pipe
    score += 1
    score_label.text = \"Score: \" + str(score)

func take_damage() -> void:
    # Check for unlimited lives mode
    if SettingsManager.get_unlimited_lives():
        return
    
    lives -= 1
    update_lives_display()
    
    # Play hurt animation
    if bird.has_method(\"play_hurt_animation\"):
        bird.play_hurt_animation()
    
    if lives <= 0:
        game_over()
    else:
        # Reset bird position
        bird.position = Vector2(150, 300)
        bird.velocity = Vector2.ZERO

func game_over() -> void:
    # Play dead animation
    if bird.has_method(\"play_dead_animation\"):
        bird.play_dead_animation()
    
    get_tree().paused = true
    game_over_panel.visible = true
    spawn_timer.stop()
    pause_menu.is_paused = false
    pause_menu.hide_pause_menu()

func _on_watch_ad_pressed() -> void:
    if AdManager.is_reward_ad_ready():
        AdManager.show_reward_ad()
        await AdManager.ad_rewarded
        # Grant 3 extra lives
        lives += 3
        update_lives_display()
        game_over_panel.visible = false
        get_tree().paused = false
        spawn_timer.start()

func _on_restart_pressed() -> void:
    get_tree().paused = false
    get_tree().reload_current_scene()

func _on_menu_pressed() -> void:
    get_tree().paused = false
    AdManager.hide_banner_ad()
    get_tree().change_scene_to_file(\"res://launcher/Launcher.tscn\")

# Pause menu integration
func _on_pause_menu_resume_requested() -> void:
    # Resume game logic is handled by pause menu itself
    pass

func _on_pause_menu_restart_requested() -> void:
    _on_restart_pressed()

func _on_pause_menu_settings_requested() -> void:
    get_tree().paused = false
    get_tree().change_scene_to_file(\"res://shared/Settings.tscn\")

func _on_pause_menu_menu_requested() -> void:
    _on_menu_pressed()

func _on_pause_button_pressed() -> void:
    pause_menu.pause_game()

func _on_remove_ads_pressed() -> void:
    var dialog = remove_ads_dialog_scene.instantiate()
    get_tree().root.add_child(dialog)

func update_lives_display() -> void:
    if SettingsManager.get_unlimited_lives():
        lives_label.text = \"Lives: âˆž\"
    else:
        lives_label.text = \"Lives: \" + str(lives)
"

