# ðŸŽ® DINO EXPLORER - MAIN GAME SCRIPT

# âš™ï¸ GAME SETTINGS - CUSTOMIZE HERE!
const TOTAL_DINOS = 24  # Total dinos to spawn at start
const AGGRESSIVE_CHANCE = 0.2  # 20% aggressive, 80% nice
const DAMAGE_COOLDOWN = 1.5  # Seconds of invincibility after hit
const HATCH_INTERVAL_MIN = 180.0  # 3 minutes
const HATCH_INTERVAL_MAX = 300.0  # 5 minutes

@onready var player: CharacterBody2D = $Player
@onready var score_label: Label = $UI/ScoreLabel
@onready var lives_label: Label = $UI/LivesLabel
@onready var game_over_panel: Panel = $UI/GameOverPanel
@onready var pause_menu = $PauseMenu
@onready var hatch_timer: Timer = $HatchTimer
@onready var dinos_container: Node2D = $Dinos
@onready var nests_container: Node2D = $Nests

var enemy_scene = preload(\"res://dino_explorer/Enemy.tscn\")
var pet_scene = preload(\"res://dino_explorer/PetDino.tscn\")
var nest_scene = preload(\"res://dino_explorer/Nest.tscn\")
var tutorial_scene = preload(\"res://dino_explorer/ExplorerTutorial.tscn\")
var remove_ads_dialog_scene = preload(\"res://shared/RemoveAdsDialog.tscn\")

var dinos_petted: int = 0
var lives: int = 3
var is_invincible: bool = false
var nests: Array = []

# Dino type list
var dino_types = [
    \"nico\", \"olaf\", \"doux\", \"kuro\", \"mort\", \"sena\",
    \"loki\", \"cole\", \"tard\", \"kira\", \"vita\", \"mono\"
]

func _ready() -> void:
    AdManager.show_banner_ad()
    
    # Update lives display for unlimited mode
    update_lives_display()
    
    # Show tutorial if needed
    if TutorialManager.should_show_tutorial(\"explorer\"):
        show_tutorial()
    else:
        start_game()

func start_game() -> void:
    spawn_fixed_dinos()
    spawn_nests()
    hatch_timer.wait_time = randf_range(HATCH_INTERVAL_MIN, HATCH_INTERVAL_MAX)
    hatch_timer.start()

func show_tutorial() -> void:
    var tutorial = tutorial_scene.instantiate()
    add_child(tutorial)
    TutorialManager.show_tutorial(\"explorer\")

func spawn_fixed_dinos() -> void:
    # Spawn dinos at fixed positions across the world
    var grid_cols = 6
    var grid_rows = 4
    var spacing_x = 2400.0 / (grid_cols + 1)
    var spacing_y = 1800.0 / (grid_rows + 1)
    
    for row in range(grid_rows):
        for col in range(grid_cols):
            var pos = Vector2(
                spacing_x * (col + 1) + randf_range(-50, 50),
                spacing_y * (row + 1) + randf_range(-50, 50)
            )
            
            # Avoid spawning too close to player
            if pos.distance_to(player.position) < 200:
                continue
            
            var is_aggressive = randf() < AGGRESSIVE_CHANCE
            
            if is_aggressive:
                var enemy = enemy_scene.instantiate()
                enemy.position = pos
                enemy.set_player(player)
                enemy.add_to_group(\"enemy\")
                dinos_container.add_child(enemy)
            else:
                var pet = pet_scene.instantiate()
                pet.position = pos
                pet.petted.connect(_on_dino_petted)
                pet.add_to_group(\"pet\")
                dinos_container.add_child(pet)

func spawn_nests() -> void:
    # Spawn nests at fixed positions
    for i in range(8):
        var nest = nest_scene.instantiate()
        var pos = Vector2(
            randf_range(200, 2200),
            randf_range(200, 1600)
        )
        nest.position = pos
        nests_container.add_child(nest)
        nests.append(nest)

func _process(_delta: float) -> void:
    # Camera follows player
    $Camera2D.global_position = player.global_position
    
    # Check collision with enemies
    if not is_invincible:
        for enemy in get_tree().get_nodes_in_group(\"enemy\"):
            if enemy is CharacterBody2D:
                var distance = player.position.distance_to(enemy.position)
                if distance < 30:
                    take_damage()
                    break

func _on_hatch_timer_timeout() -> void:
    # Spawn new dino from random nest
    if nests.size() > 0:
        var random_nest = nests[randi() % nests.size()]
        var is_aggressive = randf() < AGGRESSIVE_CHANCE
        
        if is_aggressive:
            var enemy = enemy_scene.instantiate()
            enemy.position = random_nest.position
            enemy.set_player(player)
            enemy.add_to_group(\"enemy\")
            dinos_container.add_child(enemy)
        else:
            var pet = pet_scene.instantiate()
            pet.position = random_nest.position
            pet.petted.connect(_on_dino_petted)
            pet.add_to_group(\"pet\")
            dinos_container.add_child(pet)
    
    hatch_timer.wait_time = randf_range(HATCH_INTERVAL_MIN, HATCH_INTERVAL_MAX)

func _on_dino_petted() -> void:
    dinos_petted += 1
    score_label.text = \"Dinos Petted: \" + str(dinos_petted)

func take_damage() -> void:
    # Check for unlimited lives mode
    if SettingsManager.get_unlimited_lives():
        return
    
    if is_invincible:
        return
    
    lives -= 1
    update_lives_display()
    is_invincible = true
    
    # Flash player red
    for i in range(6):
        player.modulate = Color(1, 0, 0, 0.5)
        await get_tree().create_timer(0.25).timeout
        player.modulate = Color(1, 1, 1, 1)
        await get_tree().create_timer(0.25).timeout
    
    is_invincible = false
    
    if lives <= 0:
        game_over()

func game_over() -> void:
    get_tree().paused = true
    game_over_panel.visible = true
    hatch_timer.stop()
    pause_menu.is_paused = false
    pause_menu.hide_pause_menu()

func _on_watch_ad_pressed() -> void:
    if AdManager.is_reward_ad_ready():
        AdManager.show_reward_ad()
        await AdManager.ad_rewarded
        lives += 3
        update_lives_display()
        game_over_panel.visible = false
        get_tree().paused = false
        hatch_timer.start()

func _on_restart_pressed() -> void:
    get_tree().paused = false
    get_tree().reload_current_scene()

func _on_menu_pressed() -> void:
    get_tree().paused = false
    AdManager.hide_banner_ad()
    get_tree().change_scene_to_file(\"res://launcher/Launcher.tscn\")

# Pause menu integration
func _on_pause_menu_resume_requested() -> void:
    pass

func _on_pause_menu_restart_requested() -> void:
    _on_restart_pressed()

func _on_pause_menu_settings_requested() -> void:
    get_tree().paused = false
    get_tree().change_scene_to_file(\"res://shared/Settings.tscn\")

func _on_pause_menu_menu_requested() -> void:
    _on_menu_pressed()

func _on_pause_button_pressed() -> void:
    pause_menu.pause_game()

func _on_remove_ads_pressed() -> void:
    var dialog = remove_ads_dialog_scene.instantiate()
    get_tree().root.add_child(dialog)

func update_lives_display() -> void:
    if SettingsManager.get_unlimited_lives():
        lives_label.text = \"Lives: âˆž\"
    else:
        lives_label.text = \"Lives: \" + str(lives)
"

