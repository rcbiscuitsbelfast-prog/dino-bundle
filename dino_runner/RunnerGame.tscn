script/source = "extends Node2D

# ðŸŽ® DINO RUNNER - MAIN GAME SCRIPT

# âš™ï¸ GAME SETTINGS - CUSTOMIZE HERE!
var OBSTACLE_SPAWN_TIME_MIN = 1.0  # Minimum time between obstacles
var OBSTACLE_SPAWN_TIME_MAX = 2.5  # Maximum time between obstacles
const POWERUP_SPAWN_TIME = 8.0  # How often power-ups appear
const IMMUNITY_DURATION = 5.0  # How long shield lasts
const SPEED_INCREASE_INTERVAL = 5.0  # How often to increase speed
const SPEED_INCREASE_AMOUNT = 0.05  # How much to increase speed each time
const MAX_SPEED_MULTIPLIER = 2.0  # Cap at 2x speed

@onready var dino: CharacterBody2D = $Dino
@onready var obstacle_timer: Timer = $ObstacleTimer
@onready var powerup_timer: Timer = $PowerUpTimer
@onready var speed_timer: Timer = $SpeedTimer
@onready var score_label: Label = $UI/ScoreLabel
@onready var lives_label: Label = $UI/LivesLabel
@onready var speed_label: Label = $UI/SpeedLabel
@onready var jumps_label: Label = $UI/JumpsLabel
@onready var game_over_panel: Panel = $UI/GameOverPanel
@onready var pause_menu = $PauseMenu

var obstacle_scene = preload(\"res://dino_runner/Obstacle.tscn\")
var powerup_scene = preload(\"res://dino_runner/PowerUp.tscn\")
var tutorial_scene = preload(\"res://dino_runner/RunnerTutorial.tscn\")

var score: int = 0
var lives: int = 3
var speed_multiplier: float = 1.0

func _ready() -> void:
	AdManager.show_banner_ad()
	dino.floor_stop_on_slope = false
	powerup_timer.wait_time = POWERUP_SPAWN_TIME
	speed_timer.wait_time = SPEED_INCREASE_INTERVAL
	
	# Initialize UI
	speed_label.text = \"Speed: x1.0\"
"

