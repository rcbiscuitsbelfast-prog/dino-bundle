# ðŸŽ® DINO RUNNER - MAIN GAME SCRIPT

# âš™ï¸ GAME SETTINGS - CUSTOMIZE HERE!
var OBSTACLE_SPAWN_TIME_MIN = 1.0  # Minimum time between obstacles
var OBSTACLE_SPAWN_TIME_MAX = 2.5  # Maximum time between obstacles
const POWERUP_SPAWN_TIME = 8.0  # How often power-ups appear
const IMMUNITY_DURATION = 5.0  # How long shield lasts
const SPEED_INCREASE_INTERVAL = 5.0  # How often to increase speed
const SPEED_INCREASE_AMOUNT = 0.05  # How much to increase speed each time
const MAX_SPEED_MULTIPLIER = 2.0  # Cap at 2x speed

@onready var dino: CharacterBody2D = $Dino
@onready var obstacle_timer: Timer = $ObstacleTimer
@onready var powerup_timer: Timer = $PowerUpTimer
@onready var speed_timer: Timer = $SpeedTimer
@onready var score_label: Label = $UI/ScoreLabel
@onready var lives_label: Label = $UI/LivesLabel
@onready var speed_label: Label = $UI/SpeedLabel
@onready var jumps_label: Label = $UI/JumpsLabel
@onready var game_over_panel: Panel = $UI/GameOverPanel
@onready var pause_menu = $PauseMenu

var obstacle_scene = preload(\"res://dino_runner/Obstacle.tscn\")
var powerup_scene = preload(\"res://dino_runner/PowerUp.tscn\")
var tutorial_scene = preload(\"res://dino_runner/RunnerTutorial.tscn\")

var score: int = 0
var lives: int = 3
var speed_multiplier: float = 1.0

func _ready() -> void:
	AdManager.show_banner_ad()
	dino.floor_stop_on_slope = false
	powerup_timer.wait_time = POWERUP_SPAWN_TIME
	speed_timer.wait_time = SPEED_INCREASE_INTERVAL
	
	# Initialize UI
	speed_label.text = \"Speed: x1.0\"
	jumps_label.text = \"Jumps: 2\"
	lives_label.text = \"Lives: 3\"
	score_label.text = \"Score: 0\"
	
	# Apply difficulty settings
	var difficulty_multiplier = SettingsManager.get_difficulty_multiplier()
	var spawn_multiplier = SettingsManager.get_obstacle_spawn_multiplier()
	
	OBSTACLE_SPAWN_TIME_MIN = 1.0 * spawn_multiplier
	OBSTACLE_SPAWN_TIME_MAX = 2.5 * spawn_multiplier
	
	# Show tutorial if needed
	if TutorialManager.should_show_tutorial(\"runner\"):
		show_tutorial()
	else:
		start_game()

func start_game() -> void:
	# Start normal game loop
	obstacle_timer.start()
	powerup_timer.start()
	speed_timer.start()

func show_tutorial() -> void:
	var tutorial = tutorial_scene.instantiate()
	add_child(tutorial)
	TutorialManager.show_tutorial(\"runner\")

func _process(_delta: float) -> void:
	# Update HUD
	jumps_label.text = \"Jumps: \" + str(dino.get_jumps_remaining())
	speed_label.text = \"Speed: x\" + str(snapped(speed_multiplier, 0.01))
	score_label.text = \"Score: \" + str(score) + \"  Speed: x\" + str(snapped(speed_multiplier, 0.01))
	
	# Check collision with obstacles
	for obstacle in get_tree().get_nodes_in_group(\"obstacle\"):
		if obstacle is Area2D and obstacle.overlaps_body(dino):
			if not dino.is_immune:
				take_damage()
			obstacle.queue_free()
	
	# Check collision with power-ups
	for powerup in get_tree().get_nodes_in_group(\"powerup\"):
		if powerup is Area2D and powerup.overlaps_body(dino):
			collect_powerup(powerup)

func _on_obstacle_timer_timeout() -> void:
	# ðŸŽ² SPAWN RANDOM OBSTACLE TYPE
	var obstacle = obstacle_scene.instantiate()
	
	# Choose random obstacle type (0, 1, or 2)
	var random_type = randi() % 3
	obstacle.setup(random_type)
	
	# Apply speed multiplier to obstacle speed
	if obstacle.has_method(\"set_speed_multiplier\"):
		obstacle.set_speed_multiplier(speed_multiplier)
	
	obstacle.position = Vector2(850, 480)
	obstacle.add_to_group(\"obstacle\")
	add_child(obstacle)
	
	score += 1
	score_label.text = \"Score: \" + str(score)
	
	# Randomize next spawn time (faster spawns with higher speed)
	var adjusted_min = OBSTACLE_SPAWN_TIME_MIN / speed_multiplier
	var adjusted_max = OBSTACLE_SPAWN_TIME_MAX / speed_multiplier
	obstacle_timer.wait_time = randf_range(adjusted_min, adjusted_max)

func _on_powerup_timer_timeout() -> void:
	# ðŸŽ SPAWN RANDOM POWER-UP
	var powerup = powerup_scene.instantiate()
	
	# Choose random power-up type (0 or 1)
	var random_type = randi() % 2
	powerup.setup(random_type)
	
	powerup.position = Vector2(850, 400)
	powerup.add_to_group(\"powerup\")
	add_child(powerup)

func collect_powerup(powerup: Area2D) -> void:
	# ðŸ’Ž HANDLE POWER-UP COLLECTION
	match powerup.powerup_type:
		0:  # Shield
			dino.grant_immunity(IMMUNITY_DURATION)
		1:  # Extra Life
			lives += 1
			lives_label.text = \"Lives: \" + str(lives)
	
	powerup.queue_free()

func take_damage() -> void:
	lives -= 1
	lives_label.text = \"Lives: \" + str(lives)
	
	if lives <= 0:
		game_over()

func game_over() -> void:
	get_tree().paused = true
	game_over_panel.visible = true
	obstacle_timer.stop()
	powerup_timer.stop()
	speed_timer.stop()
	pause_menu.is_paused = false
	pause_menu.hide_pause_menu()

func _on_watch_ad_pressed() -> void:
	if AdManager.is_reward_ad_ready():
		AdManager.show_reward_ad()
		await AdManager.ad_rewarded
		lives += 3
		lives_label.text = \"Lives: \" + str(lives)
		game_over_panel.visible = false
		get_tree().paused = false
		obstacle_timer.start()
		powerup_timer.start()
		speed_timer.start()

func _on_restart_pressed() -> void:
	get_tree().paused = false
	get_tree().reload_current_scene()

func _on_menu_pressed() -> void:
	get_tree().paused = false
	AdManager.hide_banner_ad()
	get_tree().change_scene_to_file(\"res://launcher/Launcher.tscn\")

func _on_speed_timer_timeout() -> void:
	# Gradually increase game speed over time
	speed_multiplier = min(MAX_SPEED_MULTIPLIER, speed_multiplier + SPEED_INCREASE_AMOUNT)

# Pause menu integration
func _on_pause_menu_resume_requested() -> void:
	# Resume game logic is handled by pause menu itself
	pass

func _on_pause_menu_restart_requested() -> void:
	_on_restart_pressed()

func _on_pause_menu_settings_requested() -> void:
	get_tree().paused = false
	get_tree().change_scene_to_file(\"res://shared/Settings.tscn\")

func _on_pause_menu_menu_requested() -> void:
	_on_menu_pressed()

func _on_pause_button_pressed() -> void:
	pause_menu.pause_game()
"

